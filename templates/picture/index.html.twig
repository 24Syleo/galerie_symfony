{% extends 'base.html.twig' %}

{% block title %}Galerie de
	{{ app.user.pseudo }}
{% endblock %}

{% block body %}
	<h1 class="text-center">Bienvenue dans ta Galerie Photo
		{{ app.user.pseudo }}</h1>

	<div class="comtainer">
		<div class="row">
			<div class="col-1">
				<a href="{{ path('picture.create') }}" class="button">Ajouter</a>
			</div>
			<div class="col-11">
				{% for pic in pictures %}
					<figure class="figure">
						<img src="{{ vich_uploader_asset(pic) }}" class="figure-img img-fluid rounded" alt="{{ pic.title }}">
						<figcaption class="figure-caption">{{ pic.title }}</figcaption>
					</figure>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
